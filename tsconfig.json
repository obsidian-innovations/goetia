{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@engine": ["src/engine/index.ts"],
      "@engine/*": ["src/engine/*"],
      "@canvas": ["src/canvas/index.ts"],
      "@canvas/*": ["src/canvas/*"],
      "@stores": ["src/stores/index.ts"],
      "@stores/*": ["src/stores/*"],
      "@db": ["src/db/index.ts"],
      "@db/*": ["src/db/*"],
      "@services": ["src/services/index.ts"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.d.ts", "expo-env.d.ts"]
}
