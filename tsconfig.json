{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@engine": ["src/engine"],
      "@engine/*": ["src/engine/*"],
      "@canvas": ["src/canvas"],
      "@canvas/*": ["src/canvas/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@db": ["src/db"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": ["src"]
}
